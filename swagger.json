  "host": "undefined",
  "basePath": "/v2",
  "tags": [
    {
      "name": "Hapkido",
      "description": "Hapkido API",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/student/{studentHbId}": {
      "get": {
        "tags": [
          "student"
        ],
        "summary": "Find student by HbID",
        "description": "Returns a single student",
        "operationId": "getStudentByHbId",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "studentHbId",
            "in": "path",
            "description": "Hb ID of student to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Student"
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Student not found"
          }
        }
      }
    },
    "/student/all": {
      "get": {
        "tags": [
          "student"
        ],
        "summary": "Gets all student",
        "description": "Returns all students",
        "operationId": "getAllStudent",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "No Students not found"
          }
        }
      }
    },
    "/student/create": {
      "post": {
        "tags": [
          "student"
        ],
        "summary": "create student",
        "description": "creates a new student",
        "operationId": "createStudent",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "student",
            "in": "body",
            "description": "student to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Student"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "405": {
            "description": "Invalid Input"
          }
        }
      }
    }
  },
  "definitions": {
    "Student": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "hbId": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "pinNumber": {
          "type": "integer"
        },
        "gradeID": {
          "type": "integer"
        },
        "isAdmin": {
          "type": "boolean"
        },
        "attendance": {
          "type": "array"
        },
        "gradingDating": {
          "type": "array"
        },
        "feedback": {
          "type": "array"
        }
      }
    },
    "ClassType": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "classType": {
          "type": "string"
        }
      }
    }
  },
  "externalDocs": {
